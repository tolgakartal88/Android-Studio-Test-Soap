<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/light_blue_c2"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_kod"
            android:visibility="gone"
            android:textStyle="bold|italic"
            android:text="Kod"
            android:layout_height="0dp"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/item_aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Açıklama"
            android:background="@color/light_blue_c1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="36dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:background="@color/light_blue_c2"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="Alış"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="0dp"
            android:layout_weight="1"
            android:background="@color/light_blue_c2"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:textAlignment="center"
            android:text="Satış" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_alis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:background="@color/light_blue_c4"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Alış Fiyat" />

        <TextView
            android:id="@+id/item_satis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="0dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="1"
            android:background="@color/light_blue_c4"
            android:textSize="18dp"
            android:textAlignment="center"
            android:text="Satış Fiyat" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_guncellenme_zamani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="10dp"
        android:background="@color/light_blue_c1"
        android:textStyle="italic"
        android:textSize="10dp"
        android:textAlignment="textEnd"
        android:text="Son Güncellenme Tarihi"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="121dp" />
</LinearLayout>